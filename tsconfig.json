{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "declaration": true, // Enable declaration file generation
    "declarationDir": "dist", // Output declarations to 'dist'
    "outDir": "dist", // Output compiled files to 'dist'
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
